{
  "name": "@alexaegis/autotool-plugin-editorconfig",
  "description": "My editorconfig",
  "version": "0.8.4",
  "license": "MIT",
  "private": false,
  "archetype": {
    "platform": "node",
    "framework": "autotool",
    "language": "ts",
    "kind": "lib"
  },
  "keywords": [
    "autotool-plugin",
    "editorconfig",
    "managed-by-autotool"
  ],
  "author": {
    "email": "alexaegis@gmail.com",
    "name": "Alex Aegis",
    "url": "https://github.com/AlexAegis"
  },
  "homepage": "https://github.com/AlexAegis/js-tooling",
  "repository": {
    "url": "git+https://github.com/AlexAegis/js-tooling",
    "type": "git",
    "directory": "packages/autotool-plugin-editorconfig"
  },
  "bugs": {
    "email": "alexaegis@gmail.com",
    "url": "https://github.com/AlexAegis/js-tooling/issues"
  },
  "type": "module",
  "config": {
    "engine-strict": true
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.10.0",
    "pnpm": ">=8.0.0"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs",
      "default": "./index.js"
    },
    "./editorconfig": "./static/editorconfig",
    "./readme": "./readme.md"
  },
  "dependencies": {
    "@alexaegis/logging": "^0.7.2",
    "autotool-plugin": "^0.3.0"
  },
  "devDependencies": {
    "@alexaegis/eslint-config-vitest": "^0.8.4",
    "@alexaegis/ts": "^0.8.4",
    "@alexaegis/vite": "^0.8.4",
    "@alexaegis/vitest": "^0.8.4",
    "@types/node": "^20.9.0",
    "publint": "^0.2.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "scripts": {
    "build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "build-lib_": "vite build",
    "lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "lint:depcheck_": "depcheck",
    "lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
    "lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --check .",
    "lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "lint:md_": "remark --frail --no-stdout --silently-ignore .",
    "lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "lint:tsc_": "tsc --noEmit",
    "publint": "BUILD_REASON='publish' turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "publint_": "publint dist",
    "all": "BUILD_REASON='publish' turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write .",
    "test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-editorconfig",
    "test_": "vitest --passWithNoTests --coverage --run",
    "test:watch": "vitest --passWithNoTests --coverage"
  }
}